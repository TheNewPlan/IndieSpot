<h1>IndieSpot Library</h1>
<h1 id='notice'><%= notice %></h1>
<p>Saved Music</p>
<% if @myMusic.length > 0 %>
    <%= form_tag :action => 'removeMusic' do %>
        <table>
          <thead>
          <tr>
            <th>Song</th>
            <th>Album</th>
            <th>Band</th>
            <th>Genre</th>
            <th>Release</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @myMusic.each do |music| %>
              <tr>
                <td><%= check_box_tag music.id, music.id%></td>
                <td><%= music.song %></td>
                <td><%= music.album %></td>
                <td><%= music.band %></td>
                <td><%= music.genre %></td>
                <td><%= music.release %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= submit_tag 'Remove' %>
    <% end %>
<% else %>
    <p>You do not have any saved Finales</p>
<% end %>

<p>IndieSpot Library</p>
<p>Catalog</p>
<%= form_tag :action => 'saveList' do %>
    <table>
      <thead>
      <tr>
        <th>Song</th>
        <th>Album</th>
        <th>Band</th>
        <th>Genre</th>
        <th>Release</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @myMusic.each do |music| %>
          <tr>
            <td><%= check_box_tag music.id, music.id%></td>
            <td><%= music.song %></td>
            <td><%= music.album %></td>
            <td><%= music.band %></td>
            <td><%= music.genre %></td>
            <td><%= music.release %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= submit_tag 'Save' %>
<% end %>